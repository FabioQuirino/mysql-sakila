@model sakila.model.actor
<link rel="stylesheet" href="~/css/privateappcomponents.css" type="text/css" />
<p>
    <h3>Detalhes Do Ator</h3>
</p>
<div class="table">
    <div class="col-md-4">
        <div class="form-group">
            <label class="font-weight-bold">Nome: </label>
            <p>@Model.first_name</p>
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Sobrenome: </label>
            <p>@Model.last_name</p>
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Última alteração:</label>
            <p>@Model.last_update</p>
        </div>
    </div>
    <div class="table-responsive-sm text-nowrap w-75">
        <table class="table-sm table-bordered table-striped thead-dark table-hover">
            <thead>
                    <th>
                        Títulos dos Filmes
                    </th>
            </thead>
            <tbody>
                @foreach(var filmeator in Model.films_actors)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => filmeator.film.title)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    @Html.ActionLink("Editar", "EditActor", new { id=Model.actor_id }) |
    <a asp-action="Index" class="align-baseline">Voltar para a Lista</a>
</div>